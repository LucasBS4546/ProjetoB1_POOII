<Window x:Class="Quiz_Game_WPF_MOO_ICT.Introducao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Game_WPF_MOO_ICT"
        mc:Ignorable="d"
        Title="Introducao" Height="450" Width="800">
    <Grid>
        <Label x:Name="LabelTitle" Content="QUIZ PARA INTELIGENTES" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Label x:Name="LabelDescription" Content="O jogo tem 10 questões. Chegue até a útima questão sem errar e você ganha!" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Height="47" Width="644" FontSize="18"/>
        <Button x:Name="ButtonStart" Content="JOGAR" HorizontalAlignment="Center" Margin="0,247,0,0" VerticalAlignment="Top" Height="80" Width="373" FontSize="36" Click="ButtonStart_Click"/>
        <Label x:Name="LabelWarning" Content="MAS CUIDADO! Se errar uma resposta, terá que recomeçar!" HorizontalAlignment="Left" Margin="173,146,0,0" VerticalAlignment="Top" Height="47" Width="498" FontSize="18"/>

    </Grid>
</Window>
