<Window x:Class="Endless_Runner_WPF_MOO_ICT.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Game" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/images/background.gif"/>
    </Window.Background>

    <Grid>
        <TextBlock Text="Endless Runner Game" FontSize="36" FontWeight="Bold" Foreground="Black" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,85,0,0" />
        <Button x:Name="modoInfinito" Content="Modo Infinito" Width="200" Height="50" FontSize="24" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Click="modoInfinito_Click"/>
        <Button x:Name="modoFases" Content="Fases" Width="200" Height="50" FontSize="24" 
            HorizontalAlignment="Center" VerticalAlignment="Top" Click="modoFases_Click" Margin="0,262,0,0"/>
        <Button x:Name="button" Content="?" HorizontalAlignment="Left" Margin="736,10,0,0" VerticalAlignment="Top" Height="39" Width="40" Click="button_Click" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>
